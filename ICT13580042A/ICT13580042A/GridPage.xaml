<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="ICT13580042A.GridPage"
             BackgroundColor="#3771a1">

    <Grid
        BackgroundColor="#efe4ca">

        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="100"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <Grid.RowDefinitions>
            <RowDefinition Height="100"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <Button
            Text="Button"
            TextColor="#ffffff"
            BackgroundColor="#525564"
            Grid.Column="0"
            Grid.Row="0"
            Grid.RowSpan="2"/>

        <Button
            Text="Button"
            TextColor="#ffffff"
            BackgroundColor="#74828f"
            Grid.RowSpan="1"
            Grid.Column="1"
            Grid.Row="1"
            Grid.ColumnSpan="2"/>

        <Button
            Text="Button"
            TextColor="#ffffff"
            BackgroundColor="#96c0ce"
            Grid.Column="2"
            Grid.Row="2"/>

    </Grid>

</ContentPage>